@model LoginModel

@{
    Layout = "_LayoutLogin";
}



<div class="register-box">
  <div class="register-logo">
    <a href="/index2.html"><b>E</b>Store</a>
  </div>

  <div class="card">
    <div class="card-body register-card-body">
      <p class="login-box-msg">Login as a membership</p>
      <form method="post" >
    <div class="input-group mb-3">
        <input type="text" class="form-control" asp-for="Usr" placeholder="Username">
        <div class="input-group-append">
            <div class="input-group-text">
                <span class="fas fa-user"></span>
            </div>
        </div>
    </div>
 
     <div class="input-group mb-3">
          <input type="password" asp-for="Pwd" class="form-control" placeholder="Password">
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-lock"></span>
            </div>
          </div>
    </div>
    
    <div>
        <label>Remeber me</label>
        <input type="checkbox" asp-for="Rem" />
    </div>
     <div class="social-auth-links text-center">
            <button type="submit" class="btn btn-primary btn-block">Login</button>
    </div>
</form>
    
      <div class="social-auth-links text-center">
        <p>- OR -</p>
        <a href="#" class="btn btn-block btn-primary">
          <i class="fab fa-facebook mr-2"></i>
          Sign up using Facebook
        </a>
        <a href="#" class="btn btn-block btn-danger">
          <i class="fab fa-google-plus mr-2"></i>
          Sign up using Google+
        </a>
      </div>

      <a href="login.html" class="text-center">I already have a membership</a>
    </div>
    <!-- /.form-box -->
  </div><!-- /.card -->
</div>
<!-- /.register-box -->