@model Invoice
@inject IConfiguration config
@{
    Layout = "_LayoutCart";
}
<div class="container">
    <h2 class="text-center py-3">ESTORE</h2>
    <h3 class="text-center">Invoice Information</h3>
    <div>
    <p>Order Day: @Model.InvoiceDate.ToString("dd/MM/yyyy")</p>
    <p>Phone Number: @Model.Phone</p>
    <p>
        Address: @Model.AddressName, @Model.WardName, @Model.DistrictName,@Model.ProvinceName
    </p>
</div>
<p class="py-2 text-center"><b>Product Infomation</b></p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Price</th>
            <th>Image</th>
            <th>Quantity</th>
            <th>Size</th>
            <th>Amount</th>
        </tr>
    </thead>
    <tbody>
            @foreach (var item in Model.InvoiceDetails)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.Price</td>
                    <td>
                            <img class="img-thumbnail" width="35" alt="" class="" src="@config.GetSection("Urls:Api").Value/images/small/@item.ImageUrl">
                    </td>
                    <td>@item.Size</td>
                    <td>@item.Quantity</td>
                    <td>@(item.Price * item.Quantity)</td>
                </tr>
            }
    </tbody>
</table>
</div>
