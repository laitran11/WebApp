@model List<Cart>
@inject IConfiguration config
@{
    Layout = "_LayoutCart";
}
<div class="container ">
    <div class="row py-3">
        <h2 class="text-center">ESTORE CART</h2>
    </div>
    <table class="table table-bordered text-center ">
    <thead>
        <tr>
            <th>Name</th>
            <th>Image</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Amount</th>
        </tr>
    </thead>
    <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>
                        <img src ="@config.GetSection("Urls:Api").Value/images/small/@item.ImageUrl" alt="@item.ProductName" />

                    </td>
                    <td>@item.Price</td>
                    <td>@item.Quantity</td>
                    <td>@(item.Price * item.Quantity)</td>
                </tr>
            }
    </tbody>
</table>
<div class=" text-center"><a href="/cart/checkout" class="btn btn-primary">Checkout</a></div>
</div>


